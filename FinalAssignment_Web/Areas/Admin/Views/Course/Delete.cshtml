@using FinalAssignment_Model.Models;
@model Course;

<h2>Delete Course</h2>

<form asp-action="Delete">
	<div class="form-group">
		<label asp-for="courseName">Course Name</label>
		<input asp-for="courseName" readonly class="form-control"  />
		
	</div>
	<div class="form-group">
		<label asp-for="courseDescription">Course Description</label>
		<textarea asp-for="courseDescription" readonly class="form-control"></textarea>
		
	</div>
	<div class="form-group">
		<label asp-for="StartDate">Start Date</label>
		<textarea asp-for="StartDate" readonly class="form-control"></textarea>
	
	</div>
	<div class="form-group">
		<label asp-for="EndDate">End Date</label>
		<textarea asp-for="EndDate" readonly class="form-control"></textarea>
	</div>
	<div class="col-5 offset-3">
		<a asp-controller="Course" asp-action="Index" class="btn-primary btn form-control">Back To All Courses </a>
	</div>
	<button type="submit" class="btn btn-primary">Delete</button>
</form>